{
  "name": "lunar-explorer-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only -r dotenv/config src/index.ts",
    "build": "rm -rf dist/ && prettier --write src/ && tsc",
    "tsc": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typeorm": "typeorm-ts-node-commonjs",
    "schema:sync": "npx typeorm-ts-node-commonjs schema:sync",
    "typeorm:cache": "npx typeorm-ts-node-commonjs cache:clear",
    "schema:drop": "npx typeorm-ts-node-commonjs -d ./src/db/app-data-source.ts",
    "migration:create": "typeorm migration:create",
    "migration:generate": "npx typeorm-ts-node-commonjs migration:generate -d ./src/db/migrationsDataSource.ts",
    "migration:show": "npx typeorm-ts-node-commonjs migration:show -d ./src/db/migrationsDataSource.ts",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d ./src/db/migrationsDataSource.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d ./src/db/migrationsDataSource.ts"
  },
  "keywords": [],
  "author": "Tomasz Wasilonek",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "prettier": "^3.2.4",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/pg": "^8.10.9",
    "@types/pg-format": "^1.0.5",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-format": "^1.0.4",
    "prettier-2": "npm:prettier@^2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  }
}